<h2><%= @list.name %></h2>
<% @list.bookmarks.each do |bookmark| %>
  <div class="card mb-3" style="max-width: 50%;">
    <div class="row g-0">
      <div class="col-4">
        <%= image_tag bookmark.movie.poster_url, alt: "movie poster", width: 200 %>
      </div>
      <div class="col-8">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
      </div>
    </div>
    <%= link_to "Remove this movie from the list", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>

<p><%= link_to "Add a movie to the list", new_list_bookmark_path(@list) %></p>
<p><%= link_to "Go back to all lists", lists_path(@list) %></p>
